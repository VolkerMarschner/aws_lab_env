    Public Subnet ID: ${aws_subnet.public.id}
    Private Subnet ID: ${aws_subnet.private.id}
    NAT Gateway ID: ${aws_nat_gateway.main.id}
    Internet Gateway ID: ${aws_internet_gateway.main.id}
  EOT
  filename = "${path.module}/vpc_outputs.txt"
}
